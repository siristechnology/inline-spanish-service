{
	"env": {
		"es6": true,
		"jest": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"semi": 0,
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"no-tabs": "off",
		"import/extensions": "off",
		"max-len": [
			"error",
			{
				"code": 120,
				"ignoreComments": true,
				"ignoreUrls": true
			}
		],
		"comma-dangle": "off",
		"func-names": "off",
		"no-console": "off"
	}
}
